
{{#if loggedIn}}
<section>
  <h2>Create New Post</h2>
  <form class="new-post-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="post">Post Description</label>
      <textarea id="post-preview" name="post-preview"></textarea>
    </div>
    <div>
      <label for="post">Post</label>
      <textarea id="post-content" name="post-content"></textarea>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>
{{else}}
<div>
    <h1>bleching log in first</h1>
</div>
{{/if}}


{{#if posts.length}}
<section class="all-posts">
  <h2>Your Posts</h2>
  <div>
    {{#each posts as |post|}}
    <div>
      {{> post-info post}}
      <button><a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a></button>
      {{!-- <a href="/api/post/{{post.id}}" class="edit-post">Edit post</a> --}}
      {{!-- <button class="edit-post">Edit Post</button> --}}
    </div>
    <br>
    <br>
    {{/each}}
  </div>
</section>
{{/if}}



<script src="/javascript/add-post.js"></script>