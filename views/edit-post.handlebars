<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div>
      <span>Post Title</span>
      <br>
      <input class="title" name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
      <span>Post Description</span>
      <br>
      <textarea class="post-preview">{{post.post_preview}}</textarea>
    </div>
    <div>
      <span>Post Content</span>
      <br>
      <textarea class="post-content">{{post.post_content}}</textarea>
    </div>
    
    <button id="save-post" type="submit">Save post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>
</article>

<form class="comment-form">
  <div>
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
